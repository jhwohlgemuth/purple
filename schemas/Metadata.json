{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "Metadata.json",
    "type": "object",
    "properties": {
        "identifier": {
            "$ref": "GUID.json"
        },
        "description": {
            "type": "string"
        },
        "keywords": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "items": {
            "type": "array",
            "items": {
                "$ref": "Artifact.json"
            }
        }
    },
    "required": [
        "identifier",
        "keywords",
        "items"
    ],
    "$defs": {
        "GUID": {
            "type": "string",
            "$schema": "https://json-schema.org/draft/2020-12/schema",
            "$id": "GUID.json",
            "pattern": "^[a-z0-9]{8}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{12}$"
        }
    }
}